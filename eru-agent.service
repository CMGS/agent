[Unit]
Description=Eru Agent
Wants=docker.service
After=network.target

[Service]
Type=simple
Environment=GOTRACEBACK=crash
ExecStart=/usr/bin/eru-agent --config /etc/eru-agent/agent.yaml
Restart=on-failure
LimitNOFILE=10485760
LimitNPROC=10485760
LimitCORE=infinity
MountFlags=slave

[Install]
WantedBy=multi-user.target
